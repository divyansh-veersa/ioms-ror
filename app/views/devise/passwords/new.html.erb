<%# Forgot Password Page %>
<% content_for(:title, "Forgot Password - IOMS") %>

<div class="min-h-screen flex items-center justify-center">
  <div class="max-w-md w-full px-6 py-8 bg-white shadow-lg rounded-lg mx-4">
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-800">IOMS</h1>
      <p class="text-gray-600 mt-2">Reset Your Password</p>
    </div>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <h2 class="text-sm font-medium mb-1">
            <%= pluralize(resource.errors.count, "error") %> prohibited this request:
          </h2>
          <ul class="list-disc list-inside text-sm">
            <% resource.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <% if flash[:notice] %>
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
          <%= flash[:notice] %>
        </div>
      <% end %>
      
      <div>
        <p class="text-sm text-gray-600 mb-4">Enter your email address and we'll send you instructions to reset your password.</p>
        
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
                          class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 text-sm" %>
      </div>

      <div>
        <%= f.submit "Send reset instructions", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    <% end %>

    <div class="text-center mt-6 space-y-2">
      <% if devise_mapping.registerable? %>
        <p class="text-sm text-gray-600">
          Don't have an account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
        </p>
      <% end %>
      <p class="text-sm text-gray-600">
        Remember your password?
        <%= link_to "Log in", new_session_path(resource_name), class: "font-medium text-blue-600 hover:text-blue-500" %>
      </p>
    </div>
  </div>
</div>